{
  "name": "@stencila/configa",
  "version": "0.4.8",
  "description": "Application configuration: DRY, flexible and type-safe",
  "bin": "dist/cli.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write '**/*.{md,ts}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --collectCoverage",
    "cli": "ts-node src/cli",
    "build": "npm run build:config && npm run build:ts",
    "build:config": "npm run cli -- schema",
    "build:ts": "tsc --project tsconfig.prod.json",
    "docs": "npm run docs:readme && npm run docs:api",
    "docs:readme": "npm run cli -- readme",
    "docs:api": "typedoc --options typedoc.js ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/configa.git"
  },
  "keywords": [
    "configuration"
  ],
  "author": "Stencila <hello@stenci.la>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/configa/issues"
  },
  "homepage": "https://github.com/stencila/configa#readme",
  "devDependencies": {
    "@stencila/dev-config": "1.4.131",
    "@types/jest": "25.2.3",
    "@types/json5": "0.0.30",
    "@types/rc": "1.1.0",
    "jest": "26.6.3",
    "jest-file-snapshot": "0.5.0",
    "json-schema": "0.3.0",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "3.9.9"
  },
  "dependencies": {
    "@stencila/logga": "^2.2.0",
    "ajv": "^6.12.2",
    "chalk": "^4.0.0",
    "globby": "^11.0.0",
    "json5": "^2.1.2",
    "rc": "^1.2.8",
    "typedoc": "^0.20.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/fixtures/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "renovate": {
    "extends": [
      "@stencila"
    ],
    "schedule": "before 3am on Monday"
  }
}
